<div class = " mb-4 text-4xl font-serif mx-4 my-8 text-gray-800">
		<p>Hello</p>
</div>

<div class = "mb-4 text-2xl font-bold mx-4 my-8 text-indigo-500"> 
	<a href = "/" class="no-underline pr-8 hover:text-indigo-800"> Log in your account</a>

</div>

<br>

<form method = "GET"  action = "/home" class = "mx-4 my-8">
	<div class = "md:flex ">

		<div class="md:w-1/8 ">
		<label class="text-gray-800 text-left font-bold mb-4 pr-4">
			Monster Name:
		</label>
		</div>

		<div class = "md:w-1/4">
			<input class = " w-5/6  shadow appearance-none border rounded py-2 px-4 text-gray-700 leading-tight" type = "text" name = "monstersearch">
		</div>	

		<div class="md:w-1/8 ">
		<label class="text-gray-800 text-left font-bold mb-4 pr-4">
			Type Name:
		</label>
		</div>

		<div class = "md:w-1/4">
			<input class = " w-5/6  shadow appearance-none border rounded py-2 px-4 text-gray-700 leading-tight" type = "text" name = "typesearch">
		</div>	

		<div class= "md:w-1/8 justify-between">
		<button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" type = "submit" name = "Search"> Search</button>
		</div>
	</div>
</form>

<div class = " mb-4 text-2xl font-serif mx-4 my-4 text-gray-700">
		<p>All Monsters</p>
</div>

<div class = "w-full " >
	<div class = "mx-4 my-32 bg-blue-200" >
	<ul>
		
		{{#each monsterarr as |m|}}
		
		<div class = 'w-1/12 md:inline-flex mx-4 my-4 px-2 py-2 border-solid  border-4 border-gray-500 '>	
		<li> 	
				<img class = " object-center " src = {{m.img}} alt = {{m.monstername}}>
				<p class = " text-base text-center font-bold">{{m.monstername}}</p>
				<p class = " text-sm text-center font-sans italic">{{m.type}}</p>
				
		</li> 	
		</div>	
		
		{{/each}}
		
	</ul>
	</div>
</div>